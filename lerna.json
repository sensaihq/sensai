{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "1.3.12",
  "npmClient": "pnpm",
  "packages": ["packages/*"],
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "./changelog.config.js"
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": ["main"],
      "registry": "https://registry.npmjs.org/"
    }
  }
}
